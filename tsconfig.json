{
  // Specifies which folders/files to include for compilation
  "include": ["src"],

  "compilerOptions": {
    // Project Structure
    "rootDir": "src", // Root directory of input files
    "outDir": "dist", // Output directory for compiled files

    // Language and Module Features
    "target": "esnext", // Specify ECMAScript target version
    "lib": ["ESNext"], // Enables the use of experimental features
    "module": "commonjs", // Specifies how modules are preserved in the output
    "moduleResolution": "node", // How modules get resolved: use Node.js resolution
    "esModuleInterop": true, // Enables compatibility between CommonJS and ES Modules
    "resolveJsonModule": true, // Allows importing JSON files

    // Type Checking and Strictness
    "strict": true, // Enable all strict type-checking options
    "skipDefaultLibCheck": true, // Enables the use of top-level await

    // Experimental and Advanced Features
    "experimentalDecorators": true, // Enables the use of decorators
    "importHelpers": true, // Enables the use of decorators (helpers)
    "preserveConstEnums": true // Enables the use of const enums
  }
}
